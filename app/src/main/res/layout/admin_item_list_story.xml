<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAdminStoryNameItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtAdminStoryDateItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView" />

    <CheckBox
        android:id="@+id/cbStoryDeleteItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="" />

    <TextView
        android:id="@+id/btnEditStory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:drawableLeft="@drawable/ic_baseline_edit_18"
        android:backgroundTint="#fff" />

    <Button
        android:id="@+id/btnGoToChapter"
        android:onClick="goToListChapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:drawableRight="@drawable/ic_baseline_library_books_18"
        android:backgroundTint="#fff"
        android:text=""/>

</LinearLayout>